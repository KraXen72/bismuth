{
	"name": "Bismuth: Color Picker & Eye dropper",
	"description": "Bismuth is a convenient, information rich Color Picker & Eye dropper. Uses IRO.js and chrome Eyedropper API",
	"version": "1.0",
	"manifest_version": 3,
	"icons": {
		"16": "images/icon16.png",
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icons": {
			"16": "images/icon16.png",
			"32": "images/icon32.png",
			"48": "images/icon48.png",
			"128": "images/icon128.png"
		}
	},
	"permissions": [
		"storage",
		"clipboardRead",
		"clipboardWrite"
	]
}